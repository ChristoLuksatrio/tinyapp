<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!username) { %>
          <form method='POST' action='/login' style='display: flex'>
            <input class="form-control" type="text" name="username" placeholder="Username" style='margin: 0 8px 0 8px'>
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
        <% } else { %>
          <li class='nav-item my-2 mx-2'>Logged in as: <%= username %>!</li>
          <form method='POST' action='/logout' style='display: flex'>
            <button type="submit" class="btn btn-outline-dark mx-2">Logout</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
